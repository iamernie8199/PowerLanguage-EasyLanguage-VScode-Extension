{
  "comments": {
    "lineComment": "//",
    "blockComment": ["{", "}"]
  },
  "brackets": [
    ["begin", "end"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "begin", "close": "\n\t\nend" },
    { "open": "stop", "close": ";" },
    { "open": "market", "close": ";" },
    { "open": "\"", "close": "\"", "notIn": ["string", "comment"] },
    { "open": "'", "close": "'", "notIn": ["string", "comment"] }
  ],
  "autoCloseBefore": ";",
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["'", "'"],
    ["`", "`"]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*//\\s*#?region\\b",
      "end": "^\\s*//\\s*#?endregion\\b"
    }
  },
  "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
  "indentationRules": {
    "increaseIndentPattern": "(?i)begin",
    "decreaseIndentPattern": "(?i)\bend"
  },
  "onEnterRules": [
    {
      "beforeText": "(^\\s*(?:var(s)?|array(s)?|input(s)?).*?:|then)\\s*$",
      "action": {
        "indent": "indent",
        "appendText": ";"
      }
    }
  ]
}
